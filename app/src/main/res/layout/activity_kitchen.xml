<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KitchenActivity">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/lightbutton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/kitchen_light_btn2"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thermobutton"
        android:layout_width="28dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/kitchen_thermo_btn2"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toEndOf="@id/lightbutton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bg_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#2A2A37"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/bg_btns"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_top" />

    <TextView
        android:id="@+id/bg_white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_top" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="Kitchen"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="9dp" />

    <TextView
        android:id="@+id/lighttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bg_white"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="5dp"
        android:textColor="#595098"
        android:text="Light"
        tools:layout_editor_absoluteY="66dp" />
    <TextView
        android:id="@+id/thermotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/lighttext"
        app:layout_constraintBottom_toBottomOf="@id/bg_white"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="5dp"
        android:textColor="#595098"
        android:text="Thermostat"
        tools:layout_editor_absoluteY="66dp" />


</androidx.constraintlayout.widget.ConstraintLayout>